.container {
  padding: 30rpx 0;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 40rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.help-icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: #07c160;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.input-section {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.input-wrapper {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.clear-icon {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background: #999;
  border-radius: 50%;
  color: #fff;
  font-size: 36rpx;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.markdown-input {
  width: 100%;
  height: 300rpx;
  padding: 20rpx 70rpx 20rpx 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-right: 10rpx;
}

.button-group {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
}

.button-group button {
  flex: 1;
  max-width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0;
  padding: 0;
  font-size: 32rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
}

.result-container {
  margin: 30rpx 40rpx 0;
  padding: 20rpx;
  border-top: 2rpx solid #eee;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-header .title {
  font-size: 30rpx;
  color: #333;
}

.btn-copy-result {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  background: #f8f8f8;
  color: #333;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
}

.plain-text {
  display: block;
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 帮助弹窗样式 */
.help-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.help-content {
  width: 80%;
  max-height: 80vh;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  position: relative;
}

.help-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.help-list {
  max-height: 60vh;
}

.help-item {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.help-item .syntax {
  display: block;
  font-family: monospace;
  color: #07c160;
  margin-bottom: 8rpx;
}

.help-item .desc {
  font-size: 24rpx;
  color: #666;
}

.btn-close {
  margin-top: 30rpx;
  background: #07c160;
  color: #fff;
  border: none;
}

.feedback-text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
  padding: 0 20rpx;
} 